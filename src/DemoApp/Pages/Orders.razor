@page "/orders"
@inject ApiClient Api
@inject ApiSettingsService Settings

<PageTitle>Orders - Prescription API Demo</PageTitle>

<div class="page-container">
    <div class="page-header d-flex justify-content-between align-items-start">
        <div>
            <h1><i class="bi bi-cart3 me-2"></i>Orders</h1>
            <p>Manage prescription orders and fulfillment</p>
        </div>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            <i class="bi bi-plus-lg me-1"></i> New Order
        </button>
    </div>

    @if (!Settings.IsConfigured)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Please configure your API key in <a href="settings">Settings</a> first.
        </div>
    }
    else if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Loading orders...</p>
        </div>
    }
    else if (_error != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-x-circle me-2"></i>@_error
            <button class="btn btn-sm btn-outline-danger ms-2" @onclick="LoadOrders">Retry</button>
        </div>
    }
    else if (_orders.Count == 0)
    {
        <div class="card">
            <div class="card-body empty-state">
                <i class="bi bi-cart3"></i>
                <h5>No Orders Found</h5>
                <p>Create your first prescription order.</p>
                <button class="btn btn-primary" @onclick="ShowCreateModal">
                    <i class="bi bi-plus-lg me-1"></i> New Order
                </button>
            </div>
        </div>
    }
    else
    {
        <!-- Orders Stats -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card bg-warning bg-opacity-10 border-warning">
                    <div class="card-body text-center py-2">
                        <h4 class="mb-0">@_orders.Count(o => o.Status == "Pending")</h4>
                        <small class="text-muted">Pending</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info bg-opacity-10 border-info">
                    <div class="card-body text-center py-2">
                        <h4 class="mb-0">@_orders.Count(o => o.Status == "Processing")</h4>
                        <small class="text-muted">Processing</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-primary bg-opacity-10 border-primary">
                    <div class="card-body text-center py-2">
                        <h4 class="mb-0">@_orders.Count(o => o.Status == "Shipped")</h4>
                        <small class="text-muted">Shipped</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success bg-opacity-10 border-success">
                    <div class="card-body text-center py-2">
                        <h4 class="mb-0">@_orders.Count(o => o.Status == "Delivered")</h4>
                        <small class="text-muted">Delivered</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order Date</th>
                            <th>Patient</th>
                            <th>Medication</th>
                            <th>Status</th>
                            <th>Notes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in _orders.OrderByDescending(o => o.OrderDate))
                        {
                            <tr>
                                <td>@order.OrderDate.ToString("MMM d, yyyy h:mm tt")</td>
                                <td><strong>@order.PatientName</strong></td>
                                <td>@order.MedicationName @(order.Dosage != null ? $"({order.Dosage})" : "")</td>
                                <td>
                                    <span class="badge status-@order.Status.ToLower()">@order.Status</span>
                                </td>
                                <td>@(order.Notes ?? "-")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" @onclick="@(() => ShowUpdateModal(order))">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-outline-danger" @onclick="@(() => DeleteOrder(order.Id))">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (_totalCount > 0)
            {
                <div class="card-footer text-muted">
                    Showing @_orders.Count of @_totalCount orders
                </div>
            }
        </div>
    }
</div>

<!-- Create/Update Modal will be added -->
@if (_showCreateModal)
{
    <CreateOrderModal Patients="_patients" Prescriptions="_prescriptions"
                      OnCreate="OnOrderCreated" OnClose="CloseModal" />
}

@if (_showUpdateModal && _selectedOrder != null)
{
    <UpdateOrderModal Order="_selectedOrder" OnUpdate="OnOrderUpdated" OnClose="CloseUpdateModal" />
}

@code {
    private List<OrderDto> _orders = [];
    private List<PatientDto> _patients = [];
    private List<PrescriptionDto> _prescriptions = [];
    private bool _isLoading;
    private string? _error;
    private int _totalCount;
    private bool _showCreateModal;
    private bool _showUpdateModal;
    private OrderDto? _selectedOrder;

    protected override async Task OnInitializedAsync()
    {
        await Settings.LoadSettingsAsync();
        if (Settings.IsConfigured)
        {
            await LoadOrders();
            await LoadPatients();
            await LoadPrescriptions();
        }
    }

    private async Task LoadOrders()
    {
        _isLoading = true;
        _error = null;
        StateHasChanged();

        var result = await Api.GetOrdersAsync();
        if (result.IsSuccess)
        {
            _orders = result.Data!.Value;
            _totalCount = result.Data.ODataCount ?? _orders.Count;
        }
        else
        {
            _error = result.ErrorMessage;
        }

        _isLoading = false;
    }

    private async Task LoadPatients()
    {
        var result = await Api.GetPatientsAsync();
        if (result.IsSuccess)
            _patients = result.Data!;
    }

    private async Task LoadPrescriptions()
    {
        var result = await Api.GetPrescriptionsAsync();
        if (result.IsSuccess)
            _prescriptions = result.Data!;
    }

    private void ShowCreateModal() { _showCreateModal = true; }
    private void CloseModal() { _showCreateModal = false; }
    private void ShowUpdateModal(OrderDto order) { _selectedOrder = order; _showUpdateModal = true; }
    private void CloseUpdateModal() { _showUpdateModal = false; _selectedOrder = null; }

    private async Task OnOrderCreated()
    {
        CloseModal();
        await LoadOrders();
    }

    private async Task OnOrderUpdated()
    {
        CloseUpdateModal();
        await LoadOrders();
    }

    private async Task DeleteOrder(Guid orderId)
    {
        var result = await Api.DeleteOrderAsync(orderId);
        if (result.IsSuccess)
            await LoadOrders();
    }
}

