@page "/order-status"
@page "/order-status/{OrderId:int}"
@using Adapters.ApiClient.V1
@using DTOs.V1
@using Web.Services
@inject OrderService OrderService

<PageTitle>Order Status</PageTitle>

<div class="container mt-4">
    <h1>Order Status</h1>

    @if (OrderId.HasValue)
    {
        <!-- Single order view -->
        @if (loading)
        {
            <div class="text-center my-5">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading order details...</p>
            </div>
        }
        else if (errorMessage != null)
        {
            <div class="alert alert-danger">
                <strong>Error:</strong> @errorMessage
            </div>
            <a href="/order-status" class="btn btn-primary">View All Orders</a>
        }
        else if (currentOrder != null)
        {
            <div class="card">
                <div class="card-header">
                    <h4>Order #@currentOrder.Id</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Patient:</strong> @currentOrder.CustomerName</p>
                            <p><strong>Medication:</strong> @currentOrder.Medication</p>
                            <p><strong>Order Date:</strong> @currentOrder.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <strong>Status:</strong>
                                <span class="badge bg-@OrderService.GetStatusBadgeColor(currentOrder.Status) ms-2">
                                    @currentOrder.Status
                                </span>
                            </p>
                            <p><strong>Notes:</strong> @(currentOrder.Notes ?? "No notes")</p>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a href="/order-status" class="btn btn-secondary">Back to All Orders</a>
                        <a href="/place-order" class="btn btn-primary">Place Another Order</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Search and list view -->
        <div class="card mb-4">
            <div class="card-body">
                <h5>Search by Patient ID</h5>
                <div class="input-group">
                    <input type="number" class="form-control" placeholder="Enter Patient ID" @bind="searchPatientId" />
                    <button class="btn btn-primary" @onclick="SearchByPatient" disabled="@loading">
                        @if (loading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Search
                    </button>
                    <button class="btn btn-secondary" @onclick="LoadAllOrders" disabled="@loading">
                        Show All
                    </button>
                </div>
            </div>
        </div>

        @if (loading)
        {
            <div class="text-center my-5">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (errorMessage != null)
        {
            <div class="alert alert-danger">
                <strong>Error:</strong> @errorMessage
            </div>
        }
        else if (orders == null || !orders.Any())
        {
            <div class="alert alert-info">
                <p class="mb-0">No orders found. <a href="/place-order">Place your first order</a></p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Patient</th>
                            <th>Medication</th>
                            <th>Order Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in orders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.CustomerName</td>
                                <td>@order.Medication</td>
                                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <span class="badge bg-@OrderService.GetStatusBadgeColor(order.Status)">
                                        @order.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="/order-status/@order.Id" class="btn btn-sm btn-primary">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <p class="text-muted">Total orders: @orders.Count()</p>
        }
    }
</div>

@code {
    [Parameter]
    public int? OrderId { get; set; }

    private IEnumerable<OrderDto>? orders;
    private OrderDto? currentOrder;
    private bool loading = true;
    private string? errorMessage;
    private int? searchPatientId;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        loading = true;
        errorMessage = null;

        try
        {
            if (OrderId.HasValue)
            {
                currentOrder = await OrderService.GetOrderByIdAsync(OrderId.Value);
                if (currentOrder == null)
                {
                    errorMessage = $"Order #{OrderId} not found";
                }
            }
            else
            {
                await LoadAllOrders();
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadAllOrders()
    {
        loading = true;
        errorMessage = null;
        searchPatientId = null;

        try
        {
            orders = await OrderService.GetAllOrdersAsync();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task SearchByPatient()
    {
        if (!searchPatientId.HasValue || searchPatientId.Value <= 0)
        {
            errorMessage = "Please enter a valid Patient ID";
            return;
        }

        loading = true;
        errorMessage = null;

        try
        {
            orders = await OrderService.GetOrdersByPatientAsync(searchPatientId.Value);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }
}

