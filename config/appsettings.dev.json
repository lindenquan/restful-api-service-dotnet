{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Application": "Debug"
    }
  },

  "Cache": {
    "L1": {
      "Enabled": true,
      "Consistency": "Eventual",
      "TtlSeconds": 10,
      "MaxItems": 5000
    },
    "L2": {
      "Enabled": true,
      "ConnectionString": "localhost:6379",
      "InstanceName": "PrescriptionApi:Dev:",
      "TtlSeconds": 60
    }
  },

  "_note_RootAdmin": "RootAdmin__InitialApiKey must be set via environment variable",
  "RootAdmin": {
    "Email": "dev-admin@localhost",
    "EnableAutoCreate": true
  },

  "Cors": {
    "AllowedOrigins": [],
    "AllowCredentials": false
  },

	"RateLimiting": {
	  "Enabled": true,
	  "PermitLimit": 1000,
	  "QueueLimit": 500
	},

	"Swagger": {
	  "Enabled": true
	}
}

